    TextArea {
        id: gpuInfoField
        x: 634
        y: 373
        width: 603
        height: 83
        enabled: false
        placeholderText: qsTr("Text Area")
    }
    states: [
        State {
            name: "clicked"

            PropertyChanges {
                target: label
                text: qsTr("Button Checked")
            }
        }
    ]
